<UserControl
    x:Class="TTTExtended.Views.PrivacyPolicy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TTTExtended.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel>
        <TextBlock Text="Tic Tac Toe Ultimate" FontFamily="Segoe UI" FontWeight="SemiLight" FontSize="26.667" />

        <TextBlock TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       FontSize="14"
                       Text="This application is using internet connection in order to provide access to high scores board. It takes only the names provided in the app if such exists and the score from the played game." FontFamily="Global User Interface" />

        <TextBlock TextWrapping="Wrap"
                       Margin="0,10,0,0"
                       FontSize="14"
                       Text="This application does not record any personal information." />
    </StackPanel>
</UserControl>
